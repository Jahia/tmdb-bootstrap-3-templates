<?xml version="1.0" encoding="UTF-8"?>
<content xmlns:j="http://www.jahia.org/jahia/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0">
    <modules jcr:primaryType="jnt:modules">
        <tmdb-bootstrap-3-templates j:dependencies="bootstrap default jahia-bootstrap-v3-components tmdb-provider"
                                  j:modulePriority="0"
                                  j:moduleType="module"
                                  j:title="TMDB Bootstrap 3 Templates"
                                  jcr:primaryType="jnt:module">
                
                <portlets jcr:primaryType="jnt:portletFolder"/>
                <files jcr:primaryType="jnt:folder"/>
                <contents jcr:primaryType="jnt:contentFolder"/>
                <templates bootstrapVersion="less3"
                    j:rootTemplatePath="/base"
                    jcr:mixinTypes="jmix:bootstrapVersion"
                    jcr:primaryType="jnt:templatesFolder">
                    <files jcr:primaryType="jnt:folder"/>
                    <contents jcr:primaryType="jnt:contentFolder"/>
                    <movie-template j:applyOn="jnt:movie"
                            j:defaultTemplate="true"
                            j:hiddenTemplate="false"
                            j:priority="2"
                            jcr:primaryType="jnt:contentTemplate">
                        <j:translation_en jcr:language="en"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="movie-template"/>
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <bootstrap-3-row jcr:primaryType="jnt:bootstrap3Row">
                                <bootstrap-3-column jcr:primaryType="jnt:bootstrap3Column" offset="0" span="4">
                                    <bootstrap-3-column jcr:primaryType="jnt:contentList">
                                        <main-resource-display j:mainResourceView="moviefacts"
                                                  jcr:primaryType="jnt:mainResourceDisplay"/>
                                </bootstrap-3-column>
                                </bootstrap-3-column>
                                <bootstrap-3-column-1 jcr:primaryType="jnt:bootstrap3Column" offset="0" span="8">
                                    <bootstrap-3-column-1 jcr:primaryType="jnt:contentList">
                                        <main-resource-display j:mainResourceView="maindetails"
                                                  jcr:primaryType="jnt:mainResourceDisplay"/>
                                        <commentable jcr:primaryType="jnt:addComment"/>
                                        <display-comments jcr:primaryType="jnt:commentsList"/>
                                </bootstrap-3-column-1>
                                </bootstrap-3-column-1>
                            </bootstrap-3-row>
                        </pagecontent>
                    </movie-template>
                    <movieslist-template j:applyOn="jnt:moviesList"
                                 j:defaultTemplate="true"
                                 j:hiddenTemplate="false"
                                 j:priority="2"
                                 jcr:primaryType="jnt:contentTemplate">
                        <j:translation_en jcr:language="en"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="movieslist-template"/>
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <bootstrap-3-row jcr:primaryType="jnt:bootstrap3Row">
                                <bootstrap-3-column jcr:primaryType="jnt:bootstrap3Column" offset="0" span="12">
                                    <bootstrap-3-column jcr:primaryType="jnt:contentList">
                                        <bootstrap-3-pagination displayNbOfItemsPerPage="true"
                                                   displayNbOfItemsPerPageValues="5,10,25,50,100"
                                                   displayPager="true"
                                                   jcr:mixinTypes="jmix:simplePager"
                                                   jcr:primaryType="jnt:bootstrap3Pager"
                                                   nbOfPages="10"
                                                   pageSize="10"
                                                   paginationAlignment=""
                                                   paginationSize=""
                                                   useArrowNextPrevious="true"/>
                                        <main-resource-display j:mainResourceView="maindetails"
                                                  jcr:primaryType="jnt:mainResourceDisplay"/>
                                        <commentable jcr:primaryType="jnt:addComment"/>
                                        <display-comments jcr:primaryType="jnt:commentsList"/>
                                </bootstrap-3-column>
                                </bootstrap-3-column>
                            </bootstrap-3-row>
                        </pagecontent>
                    </movieslist-template>
                    <person-template j:applyOn="jnt:moviePerson"
                             j:defaultTemplate="true"
                             j:hiddenTemplate="false"
                             j:priority="2"
                             jcr:primaryType="jnt:contentTemplate">
                        <j:translation_en jcr:language="en"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="person-template"/>
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <bootstrap-3-row jcr:primaryType="jnt:bootstrap3Row">
                                <bootstrap-3-column jcr:primaryType="jnt:bootstrap3Column" offset="0" span="4">
                                    <bootstrap-3-column jcr:primaryType="jnt:contentList">
                                        <main-resource-display j:mainResourceView="picture" jcr:primaryType="jnt:mainResourceDisplay"/>
                                </bootstrap-3-column>
                                </bootstrap-3-column>
                                <bootstrap-3-column-1 jcr:primaryType="jnt:bootstrap3Column" offset="0" span="8">
                                    <bootstrap-3-column-1 jcr:primaryType="jnt:contentList">
                                        <main-resource-display j:mainResourceView="default" jcr:primaryType="jnt:mainResourceDisplay"/>
                                </bootstrap-3-column-1>
                                </bootstrap-3-column-1>
                            </bootstrap-3-row>
                        </pagecontent>
                    </person-template>
                </templates>
                
            </tmdb-bootstrap-3-templates>
    </modules>
</content>
